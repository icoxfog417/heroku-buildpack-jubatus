#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# Get arguments
BUILD_DIR=$1
CACHE_DIR=$2

APT_DIR="$CACHE_DIR/apt/"
APT_CACHE_DIR="$APT_DIR/cache"
APT_STATE_DIR="$APT_DIR/state"

mkdir -p "$APT_CACHE_DIR/archives/partial"
mkdir -p "$APT_STATE_DIR/lists/partial"

APT_OPTIONS="-o debug::nolocking=true -o dir::etc::sourceparts=$APT_DIR -o dir::cache=$APT_CACHE_DIR -o dir::state=$APT_STATE_DIR"

# Prepare to install
touch $APT_DIR/jubatus.list
echo "deb http://download.jubat.us/apt binary/" > $APT_DIR/jubatus.list

apt-get $APT_OPTIONS update

# Install Jubatus
apt-get $APT_OPTIONS -y --force-yes -d install --reinstall jubatus
mkdir -p $BUILD_DIR/.apt

for DEB in $(ls -1 $APT_CACHE_DIR/archives/*.deb); do
  dpkg -x $DEB $BUILD_DIR/.apt/
done

# Set environment variables
JUBATUS_HOME="$BUILD_DIR/.apt/opt/jubatus"
export PATH="$JUBATUS_HOME/bin:$PATH"
export LD_LIBRARY_PATH="$JUBATUS_HOME/lib:$LD_LIBRARY_PATH"
export LIBRARY_PATH="$JUBATUS_HOME/lib:$LIBRARY_PATH"
export INCLUDE_PATH="$JUBATUS_HOME/include:$INCLUDE_PATH"
export CPATH="$INCLUDE_PATH"
export CPPPATH="$INCLUDE_PATH"

source $BUILD_DIR/.apt/opt/jubatus/profile

# Run jubatus
if [ ! -f $BUILD_DIR/jubatus.sh ]; then
    echo "You have to prepare jubatus.sh to run the jubatus server"
    exit 1
else
    bash $BUILD_DIR/jubatus.sh
fi
